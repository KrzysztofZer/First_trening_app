        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/Tnapisane"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Wczytaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="wczytBut"
        android:text="Wczytaj"
        app:layout_constraintLeft_toRightOf="@+id/zapis"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Tnapisane"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.095" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="UsunBut"
        android:text="UsuÅ„"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintLeft_toRightOf="@+id/zapis"
        app:layout_constraintRight_toLeftOf="@+id/Wczytaj"
        app:layout_constraintTop_toBottomOf="@+id/Tnapisane"
        app:layout_constraintVertical_bias="0.223" />

</android.support.constraint.ConstraintLayout>
